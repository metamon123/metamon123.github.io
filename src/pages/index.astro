                <Socials />
              </div>
            )
          }
        </div>
      </div>
    </section>

    {
      latestPost && (
        <section
          id="latest"
          class:list={["pt-10 pb-6", "border-b border-border"]}
        >
          <h2 class="text-xl font-semibold tracking-wide text-foreground/90">
            Latest Dispatch
          </h2>
          <div class="mt-3 rounded-lg border border-border bg-muted/30 p-6">
            <Card variant="h3" {...latestPost} />
          </div>
        </section>
      )
    }

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-10 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-xl font-semibold tracking-wide text-foreground/90">
            Featured
          </h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-10 pb-6">
          <h2 class="text-xl font-semibold tracking-wide text-foreground/90">
            Recent Posts
          </h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
